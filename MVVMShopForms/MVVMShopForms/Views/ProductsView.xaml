<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMShopForms.Views.ProductsView">
    <ContentPage.Content>
        <ListView x:Name="ProductList" ItemsSource="{Binding Products}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" RowSpacing="10" ColumnSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image HeightRequest="66" HorizontalOptions="CenterAndExpand" Aspect="AspectFill"
                               WidthRequest="66" Grid.RowSpan="2" ></Image>
                        <Label Grid.Column="1" Text="{Binding Name}" TextColor="Blue" FontSize="24"/>
                        <Label Grid.Column="1" Text="{Binding Descripcion}" TextColor="Gray" FontSize="18"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </ContentPage.Content>
</ContentPage>